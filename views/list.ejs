<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>To do list</title>
  </head>
  <body>
    <h1> <%= kindOfDay %> </h1>

    <ul>
      <% items.forEach( function(i){ %>
        <li><%= i %></li>
      <% }); %>
    </ul>

    <form class="" action="/" method="post">
      <input type="text" name="newItem" placeholder="Insert a Task">
      <button type="submit" name="button">Add</button>
    </form>
  </body>
</html>
